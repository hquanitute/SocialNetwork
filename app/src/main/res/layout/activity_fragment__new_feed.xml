<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical">
    <TextView
        android:id="@+id/tvStatus"
        android:layout_width="125dp"
        android:layout_height="33dp"
        android:text="Cập nhật Status" />

    <EditText
        android:id="@+id/etStatus"
        android:layout_width="348dp"
        android:layout_height="68dp"
        android:layout_gravity="center"
        android:ems="10"
        android:hint="Bạn đang nghĩ gì =)))"
        android:inputType="textPersonName" />
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:visibility="gone"/>
    <VideoView
        android:id="@+id/videoViewmain"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:visibility="gone"/>
    <android.support.v7.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnimage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/custom_icon_left"
            android:background="@drawable/btnstatus"
            android:layout_margin="10dp"
            android:paddingLeft="10dp"
            android:text="Image"/>
        <Button
            android:id="@+id/btnvideo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/custom_icon_left"
            android:background="@drawable/btnstatus"
            android:layout_margin="10dp"
            android:paddingLeft="10dp"
            android:text="VIDEO"/>
        <Button
            android:id="@+id/btnGui"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btnstatus"
            android:drawableLeft="@drawable/iconleft"
            android:layout_marginLeft="20dp"
            android:padding="10dp"
            android:layout_margin="10dp"
            android:text="Đăng"/>

    </android.support.v7.widget.LinearLayoutCompat>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lv_ListStatus"/>


</LinearLayout>